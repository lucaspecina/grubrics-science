{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "veRL Debug: 20 steps",
            "type": "debugpy",
            "request": "launch",
            "module": "verl.trainer.main_ppo",
            "args": [
                "--config", "${workspaceFolder}/grubrics_science/configs/verl_grpo_debug.yaml"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "veRL Production: 2000 steps",
            "type": "debugpy",
            "request": "launch",
            "module": "verl.trainer.main_ppo",
            "args": [
                "--config", "${workspaceFolder}/grubrics_science/configs/verl_grpo.yaml"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}"
        }
    ]
}
